<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.SignIn" />

    <style name="TextAppearance.SignIn.H1">
        <item name="android:textSize">@dimen/text_sign_in_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_sign_in_h1_line</item>
        <item name="android:textColor">@color/black_87pc</item>
    </style>

    <style name="Theme.MainProject.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">@style/Theme.MainProject.TextInputLayout.ShapeAppearance</item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="hintTextColor">@color/silver_chalice</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="Theme.MainProject.TextInputLayout.ShapeAppearance">
        <item name="cornerSize">@dimen/layout_input_border_radius</item>
    </style>

    <style name="Theme.MainProject.ProgressButton.SignIn" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="shapeAppearance">
            @style/Theme.MainProject.ProgressButton.SignIn.ShapeAppearance
        </item>
        <item name="android:textAppearance">@style/TextAppearance.ProgressButton</item>
    </style>

    <style name="Theme.MainProject.ProgressButton.SignIn.ShapeAppearance" parent="ShapeAppearance.M3.Sys.Shape.Corner.Full">
        <item name="cornerSize">@dimen/progress_button_border_radius</item>
    </style>

    <style name="TextAppearance.ProgressButton" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_progress_button_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_progress_button_line</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.ProgressContainer" />

    <style name="TextAppearance.ProgressContainer.Notice">
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="TextAppearance.ProgressContainer.Notice.H1">
        <item name="android:textSize">@dimen/text_notice_progress_container_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_notice_progress_container_h1_line</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ProgressContainer.Notice.H2">
        <item name="android:textSize">@dimen/text_notice_progress_container_h2_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_notice_progress_container_h2_line</item>
    </style>

    <style name="Theme.MainProject.Button.ProgressContainer.Notice" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="shapeAppearance">
            @style/Theme.MainProject.Button.ProgressContainer.Notice.ShapeAppearance
        </item>
        <item name="android:textAppearance">@style/TextAppearance.ProgressContainer.Notice.Button
        </item>
    </style>

    <style name="Theme.MainProject.Button.ProgressContainer.Notice.ShapeAppearance" parent="ShapeAppearance.M3.Sys.Shape.Corner.Full">
        <item name="cornerSize">@dimen/button_notice_progress_container_border_radius</item>
    </style>

    <style name="TextAppearance.ProgressContainer.Notice.Button">
        <item name="android:textSize">@dimen/text_button_progress_container_notice_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_button_progress_container_notice_line
        </item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.MainProject.CardView.ItemCatalog" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/Theme.MainProject.CardView.ItemCatalog.ShapeAppearance
        </item>
    </style>

    <style name="Theme.MainProject.CardView.ItemCatalog.ShapeAppearance" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">@dimen/card_view_product_border_radius</item>
    </style>

    <style name="TextAppearance.ItemCatalog" />

    <style name="TextAppearance.ItemCatalog.H1">
        <item name="android:textSize">@dimen/text_item_catalog_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_item_catalog_h1_line</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ItemCatalog.H2">
        <item name="android:textSize">@dimen/text_item_catalog_h2_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_item_catalog_h2_line</item>
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="Theme.MainProject.Button.ItemCatalog" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="android:textAppearance">@style/TextAppearance.ItemCatalog.Button</item>
    </style>

    <style name="TextAppearance.ItemCatalog.Button">
        <item name="android:textSize">@dimen/text_button_item_catalog_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_button_item_catalog_line</item>
        <item name="android:textColor">@color/smalt</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.LastItemCatalog">
        <item name="android:textSize">@dimen/text_last_item_catalog_size</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MainProject.Button.LastItemCatalog" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.LastItemCatalog.Button</item>
    </style>

    <style name="TextAppearance.LastItemCatalog.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_button_last_item_catalog_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_button_last_item_catalog_line</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Product">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.Product.H1">
        <item name="android:textSize">@dimen/text_product_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_product_h1_line</item>
    </style>

    <style name="TextAppearance.Product.Badge">
        <item name="android:textSize">@dimen/text_badge_product_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_badge_product_line</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Product.H2">
        <item name="android:textSize">@dimen/text_product_h2_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_product_h2_line</item>
    </style>

    <style name="TextAppearance.Product.H3">
        <item name="android:textSize">@dimen/text_product_h3_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_product_h3_line</item>
        <item name="android:textColor">@color/silver_chalice</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.MainProject.BottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.MainProject.BottomSheetDialog.Modal</item>
    </style>

    <style name="Theme.MainProject.BottomSheetDialog.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/bottom_size_background</item>
        <item name="shapeAppearance">
            @style/Theme.MainProject.BottomSheetDialog.ShapeAppearance
        </item>
    </style>

    <style name="Theme.MainProject.BottomSheetDialog.ShapeAppearance" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="Theme.MainProject.BottomSheetDialog.Button" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.BottomSheetDialog</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearance">
            @style/Theme.MainProject.BottomSheetDialog.Button.ShapeAppearance
        </item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="TextAppearance.BottomSheetDialog">
        <item name="android:textSize">@dimen/text_size_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_size_line</item>
    </style>

    <style name="Theme.MainProject.BottomSheetDialog.Button.ShapeAppearance" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">@dimen/button_size_border_radius</item>
    </style>

    <style name="TextAppearance.Product.H4">
        <item name="android:textSize">@dimen/text_product_h4_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_product_h4_line</item>
    </style>

    <style name="TextAppearance.Product.H5">
        <item name="android:textSize">@dimen/text_product_h5_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_product_h5_line</item>
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="Theme.MainProject.Button.Product" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="shapeAppearance">
            @style/Theme.MainProject.Button.Product.ShapeAppearance
        </item>
        <item name="android:textAppearance">@style/TextAppearance.ProgressButton</item>
    </style>

    <style name="Theme.MainProject.Button.Product.ShapeAppearance" parent="ShapeAppearance.M3.Sys.Shape.Corner.Full">
        <item name="cornerSize">@dimen/button_product_border_radius</item>
    </style>

    <style name="TextAppearance.Button.Product" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">@dimen/text_button_product_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_button_product_line</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Profile">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.Profile.H1">
        <item name="android:textSize">@dimen/text_profile_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_profile_h1_line</item>
    </style>

    <style name="TextAppearance.Profile.H2">
        <item name="android:textSize">@dimen/text_profile_h2_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_item_catalog_h2_line</item>
    </style>

    <style name="TextAppearance.Profile.H3">
        <item name="android:textSize">@dimen/text_profile_h3_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_profile_h3_line</item>
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="Theme.MainProject.Button.Profile" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="shapeAppearance">@style/Theme.MainProject.Button.Profile.ShapeAppearance</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/normal_50</item>
        <item name="android:paddingEnd">@dimen/normal_50</item>
        <item name="android:paddingTop">@dimen/normal_175</item>
        <item name="android:paddingBottom">@dimen/normal_175</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">@dimen/button_profile_icon_padding</item>
        <item name="iconSize">@dimen/icon_button_profile_size</item>
    </style>

    <style name="Theme.MainProject.Button.Profile.ShapeAppearance" parent="ShapeAppearance.M3.Sys.Shape.Corner.Full">
        <item name="cornerSize">@dimen/button_profile_border_radius</item>
    </style>

    <style name="TextAppearance.ItemOrders">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.ItemOrders.H3">
        <item name="android:textSize">@dimen/text_item_orders_h3_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_item_orders_h3_line</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.ItemOrders.H1">
        <item name="android:textSize">@dimen/text_item_orders_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_item_orders_h1_line</item>
    </style>

    <style name="TextAppearance.ItemOrders.H2">
        <item name="android:textSize">@dimen/text_item_orders_h2_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_item_orders_h2_line</item>
    </style>

    <style name="TextAppearance.ItemOrders.H4">
        <item name="android:textSize">@dimen/text_item_orders_h4_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_item_orders_h4_line</item>
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="Theme.MainProject.CardView.ItemOrders" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/Theme.MainProject.CardView.ItemOrders.ShapeAppearance
        </item>
    </style>

    <style name="Theme.MainProject.CardView.ItemOrders.ShapeAppearance" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">@dimen/card_view_order_border_radius</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance" parent="android:TextAppearance" />

    <style name="TextAppearance.Product" />

    <style name="TextAppearance.Product.H1">
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Product.H2">
        <item name="android:textColor">@color/silver_chalice</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Notice">
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="TextAppearance.Notice.H1">
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Notice.H2">
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Theme.MainProject.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/Theme.MainProject.CardView.ShapeAppearance</item>
    </style>

    <style name="Theme.MainProject.CardView.ShapeAppearance" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">0dp</item>
    </style>

</resources>
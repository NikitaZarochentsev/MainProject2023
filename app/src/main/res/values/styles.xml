<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MainProject.TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">@style/Theme.MainProject.TextInputLayout.ShapeAppearance</item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="hintTextColor">@color/silver_chalice</item>
        <item name="endIconTint">@color/black</item>
    </style>

    <style name="Theme.MainProject.TextInputLayout.ShapeAppearance">
        <item name="cornerSize">@dimen/normal_border_radius_100</item>
    </style>

    <style name="Theme.MainProject.FilledButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/Theme.MainProject.FilledButton.ShapeAppearance</item>
        <item name="android:textAppearance">@style/TextAppearance.FilledButton</item>
    </style>

    <style name="Theme.MainProject.FilledButton.ShapeAppearance" parent="ShapeAppearance.M3.Sys.Shape.Corner.Full">
        <item name="cornerSize">@dimen/normal_border_radius_100</item>
    </style>

    <style name="TextAppearance.FilledButton" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Theme.MainProject.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/Theme.MainProject.CardView.ShapeAppearance</item>
    </style>

    <style name="Theme.MainProject.CardView.ShapeAppearance" parent="ShapeAppearance.Material3.Corner.Medium">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Theme.MainProject.BottomSheetDialog" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Theme.MainProject.BottomSheetDialog.Modal</item>
    </style>

    <style name="Theme.MainProject.BottomSheetDialog.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@drawable/bottom_size_background</item>
        <item name="shapeAppearance">
            @style/Theme.MainProject.BottomSheetDialog.ShapeAppearance
        </item>
    </style>

    <style name="Theme.MainProject.BottomSheetDialog.ShapeAppearance" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSizeTopLeft">@dimen/normal_border_radius_100</item>
        <item name="cornerSizeTopRight">@dimen/normal_border_radius_100</item>
    </style>

    <style name="Theme.MainProject.BottomSheetDialog.Button" parent="Widget.Material3.Button.TextButton">
        <item name="shapeAppearance">
            @style/Theme.MainProject.BottomSheetDialog.Button.ShapeAppearance
        </item>
    </style>

    <style name="Theme.MainProject.BottomSheetDialog.Button.ShapeAppearance" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Theme.MainProject.Button.Profile" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="shapeAppearance">@style/Theme.MainProject.Button.Profile.ShapeAppearance</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/normal_50</item>
        <item name="android:paddingEnd">@dimen/normal_50</item>
        <item name="android:paddingTop">@dimen/normal_175</item>
        <item name="android:paddingBottom">@dimen/normal_175</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">@dimen/icon_button_profile_size</item>
    </style>

    <style name="Theme.MainProject.Button.Profile.ShapeAppearance" parent="ShapeAppearance.M3.Sys.Shape.Corner.Full">
        <item name="cornerSize">@dimen/normal_border_radius_200</item>
    </style>

</resources>